	def create_strings_dict(self, path, string_dicts):
		#print("create_strings: %s %s" % (path, string_dicts))
		for lang in string_dicts:
			#print("create_strings: %s %s" % (path, lang))
			spath = "%s/strings/%s" % (path, lang)
			self.makedirs(spath)

			string_dict = string_dicts[lang]
			#print("create_strings: string_dict: %s" % (string_dict))
			for s in string_dict:
				self.write_str("%s/%s" % (spath, s), "%s\n" % string_dict[s])

	def create_attrs_dict(self, path, dict):
		for a in dict:
			if isinstance(dict[a], (int, str)):
				self.write_str("%s/%s" % (path, a), self.hex_or_str(dict[a]))



	def create_device_os_descs_dict(self, path, os_descs_dict):

		print("create_function_os_descs_dict: %s" % (os_descs_dict))

		if os_descs_dict is None:
			return

		lpath = "%s/os_descs" % (path)
		self.makedirs(lpath)

		try:
			config_id = os_descs_dict['config_id']
			config_name = os_descs_dict['config_name']
			config = "%s.%s" % (config_name, config_id)
			src = "/%s/configs/%s" % (path, config)
			target = "%s/%s" % (lpath, config)
			self.symlink(src, target)
		except KeyError:
			pass

		for o in os_descs_dict:
			print("o: %s" % (o))
			if o == 'config_id' or o == 'config_name':
				continue
			spath = "%s/%s" % (lpath, o)
			self.write_str(spath, self.hex_or_str(os_descs_dict[o]))



	def create_function_os_descs_dict(self, path, os_descs_dict):

		print("create_function_os_descs_dict: %s" % (os_descs_dict))
		
		if os_descs_dict is None:
			return

		for interface in os_descs_dict:

			ipath = "%s/os_desc/%s" % (path, interface)
			self.makedirs(ipath)

			attrs = os_descs_dict[interface]
			for a in attrs:
				self.write_str("%s/%s" % (ipath, a), attrs[a])


	def create_functions_dict(self, path, functions_dict):

		print("create_functions_dict: %s" % (functions_dict))
		print("")

		functions_path = "%s/functions" % (path)
		self.makedirs(functions_path)

		for function_name in functions_dict:

			print("create_functions_dict: %s %s" % (function_name, functions_dict[function_name]))
			print("")

			function_dict = functions_dict[function_name]
			function_path = "%s/%s" % (functions_path, function_name)
			self.makedirs(function_path)

			self.create_attrs_dict(function_path, function_dict)

			try:
				function_os_descs = function_dict['os_descs']
			except (KeyError, IndexError):
				print("no os_descs")
				continue

			self.create_function_os_descs_dict(function_path, function_os_descs)

	def create_configs_dict(self, path, configs_dict):

		print("create_configs_dict: %s" % (configs_dict))
		print("")

		configs_path = "%s/configs" % (path)

		for config_name in configs_dict:
			config_dict = configs_dict[config_name]

			config_path = "%s/%s" % (configs_path, config_name)
			self.makedirs(config_path)
			self.create_attrs_dict(config_path, config_dict)
			self.create_strings_dict(config_path, config_dict['strings'])

			function_dict = config_dict['functions']
			for f in function_dict:
				function = function_dict[f]	
				src = "/%s/functions/%s" % (path, function.replace("_", "."))
				target = "%s/%s" % (config_path, f)
				self.symlink(src, target)



