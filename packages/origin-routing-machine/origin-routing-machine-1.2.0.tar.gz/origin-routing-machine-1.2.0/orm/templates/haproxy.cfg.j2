global
    log /dev/rsyslog len 4096 local2
    user {{ user }}
    group {{ group }}
    stats socket /var/run/haproxy.sock mode 0660 level admin user {{ control_user }} group {{ control_group }}
    server-state-file /var/lib/haproxy/haproxy.state
    nbthread 4
    daemon
    tune.ssl.maxrecord 1400
    maxconn 128000

    ssl-default-bind-options no-sslv3
    ssl-default-bind-ciphers ECDH+AESGCM:DH+AESGCM:ECDH+AES256:DH+AES256:ECDH+AES128:DH+AES:RSA+AESGCM:RSA+AES:!aNULL:!MD5:!DSS

    ssl-default-server-options no-sslv3
    ssl-default-server-ciphers ECDH+AESGCM:DH+AESGCM:ECDH+AES256:DH+AES256:ECDH+AES128:DH+AES:RSA+AESGCM:RSA+AES:!aNULL:!MD5:!DSS

    tune.ssl.default-dh-param 2048

defaults
    maxconn 10000
    mode http
{% if haproxy_timeout_server_max is defined and haproxy_timeout_server_max != None %}
{%   if haproxy_timeout_server_max != 0 %}
    timeout server {{ haproxy_timeout_server_max * 1000|int }}ms
{%   endif %}
{% else %}
    timeout server 15s
{% endif %}
    timeout connect 10s
    timeout client 15s
    timeout queue 10s
    option dontlognull
    option splice-auto
    option redispatch
    option tcpka
    option allbackups

    no log
    hash-type consistent
    balance leastconn

    load-server-state-from-file global

resolvers dns
{% if nameservers %}
{% for nameserver in nameservers %}
    nameserver dns-{{ loop.index }} {{ nameserver }}
{% endfor %}
{% endif %}

#
# Haproxy stats
#
listen haproxystats
    bind :8080
{% if internal_networks %}

    acl is-internal src{% for net in internal_networks %} {{ net }}{% endfor %}

    http-request deny unless is-internal
{% endif %}

    stats enable
    stats hide-version
    stats realm Haproxy\ Statistics
    stats uri /

listen orm_external
    bind *:80 tfo
{% if certs %}
    bind *:443 ssl{% for cert in certs %} crt {{ cert }}{% endfor %} no-sslv3 no-tls-tickets alpn http/1.1 tfo
{% endif %}

    acl is-ssl dst_port 443

    # Insert a unique request identifier header
    unique-id-format %{+X}o\ %ci:%cp_%fi:%fp_%Ts_%rt:%pid
    unique-id-header X-Request-ID

    capture request header Referer               len 64
    capture request header User-Agent            len 128
    capture request header Host                  len 64
    capture request header X-Forwarded-For       len 64
    log-format '{"actconn":%ac,"feconn":%fc,"beconn":%bc,"srv_conn":%sc,"srv_queue":%sq,"backend_queue":%bq,"backend_name":"%b","bytes":%B,"bytes_uploaded":%U,"connect":%Tc,"headers":"%hr","http_request":"%r","queued":%Tw,"remote_addr":"%ci","request_id":"%ID","retries":%rc,"service":%Tt,"status":%ST,"termination_state":"%ts","time":%Ts%ms,"time_active":%Ta,"time_handshake":%Th,"time_idle":%Ti,"time_queue":%Tw,"time_request":%TR,"time_response":%Tr,"time_session":%Tt,"time_srv_connect":%Tc,"time_data":%Td,"upstream_addr":"%si"}'
    log global

    option http-keep-alive
{% if custom_internal_healthcheck %}
{% for line in custom_internal_healthcheck %}
{{ line }}
{% endfor %}
{% else %}
    option tcp-check
{% endif %}

    http-request set-header X-Forwarded-Proto https if is-ssl
    http-request set-header X-Forwarded-Proto http  unless is-ssl
    http-request set-header X-Forwarded-Port %fp
    http-request set-header X-Real-IP %ci

    server orm-1 {{ varnish_address }}:6081 check send-proxy-v2
    server orm-2 {{ varnish_address }}:6083 check send-proxy-v2
    server orm-3 {{ varnish_address }}:6084 check send-proxy-v2
    server orm-4 {{ varnish_address }}:6085 check send-proxy-v2

frontend orm_loopback
    bind {{ haproxy_address }}:4444 tfo accept-proxy
    bind {{ haproxy_address }}:4445 tfo accept-proxy
    bind {{ haproxy_address }}:4446 tfo accept-proxy
    bind {{ haproxy_address }}:4447 tfo accept-proxy

    capture request header Referer               len 64
    capture request header User-Agent            len 128
    capture request header Host                  len 64
    capture request header X-Forwarded-For       len 64
    capture request header X-Request-ID          len 64
{% raw %}
    log-format '{"actconn":%ac,"feconn":%fc,"beconn":%bc,"srv_conn":%sc,"srv_queue":%sq,"backend_queue":%bq,"backend_name":"%b","backend_name":"%b","bytes":%B,"bytes_uploaded":%U,"time":%Ts%ms,"status":%ST,"http_request":"%r","queued":%Tw,"remote_addr":"%ci","retries":%rc,"upstream_addr":"%si","connect":%Tc,"service":%Tt,"termination_state":"%ts","time_active":%Ta,"time_handshake":%Th,"time_idle":%Ti,"time_queue":%Tw,"time_request":%TR,"time_response":%Tr,"time_session":%Tt,"time_srv_connect":%Tc,"time_data":%Td,"headers":"{%[capture.req.hdr(0)]|%[capture.req.hdr(1)]|%[capture.req.hdr(2)]|%[capture.req.hdr(3)]}","request_id":"%[capture.req.hdr(4)]"}'
{% endraw %}
    log global

{% if backend_acls %}
    # ORM: Generated backend acl:s
{% endif %}
{% for line in backend_acls %}
{{ line }}
{% endfor %}

{% if backend_acls %}
# ORM: Generated backends
{% endif %}
{% for line in backends %}
{{ line }}
{% endfor %}
