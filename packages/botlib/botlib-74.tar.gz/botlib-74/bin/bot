#!/usr/bin/python3 -u
# BOTLIB - Framework to program bots.
#
#

import lo
import os

from bot import k, __version__
from lo.csl import Console
from lo.shl import execute, parse_cli
from lo.hdl import Command

opts = [
    ('-m', '--modules', 'store', str, "", 'modules to load.', 'modules'),
    ('-w', '--workdir', 'store', str, "", 'set working directory.', 'workdir'),
    ('-l', '--loglevel', 'store', str, "error", 'set loglevel.', 'level'),
    ('-a', '--logfile', 'store', str, "", 'file to log to.', 'logfile'),
]

def main():
    parse_cli("bot", __version__, opts, """bot <server> <channel> <nick>""")
    lo.cfg.modules += ",bot.shw,bot.irc,bot.rss"
    if not k.start(True):
        return
    k.wait()

execute(main)
os._exit(0)
